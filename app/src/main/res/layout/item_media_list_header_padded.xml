<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/headerActionBtn"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/home_icon_size_padding"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/sample_media_list_header"
        android:textAppearance="@style/headerTextStyle"/>

    <Button
        android:id="@+id/headerActionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="@string/more_action_text"
        android:textColor="@color/colorAccent"
        style="@style/Base.Widget.AppCompat.Button.Borderless"/>
</RelativeLayout>