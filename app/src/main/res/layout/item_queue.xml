<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/queueItemParentRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:clickable="true"
    android:background="@color/coal">

    <TextView
        android:id="@+id/queueIndexTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:textColor="@color/lightGrey"
        android:text="3"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/queueIndexTv"
        android:layout_toStartOf="@+id/moreOptionsIv"
        android:layout_centerVertical="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/songTitleMainTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lose yourself to Dance"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:lines="1"
            android:ellipsize="marquee"/>

        <TextView
            android:id="@+id/songArtistMainTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daft Punk"
            android:textColor="@color/lightGrey"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/moreOptionsIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_light_grey_24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless"
        android:drawSelectorOnTop="true"/>
</RelativeLayout>