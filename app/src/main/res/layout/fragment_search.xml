<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <ImageButton
                android:id="@+id/backIb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back_grey_24dp"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/searchQueryEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/backIb"
                android:layout_toStartOf="@+id/clearIb"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:background="@null"
                android:hint="@string/search_query_hint"
                android:textAppearance="@style/titleTextStyle"
                android:lines="1"
                android:imeOptions="actionSearch"
                android:inputType="text"/>

            <ImageButton
                android:id="@+id/clearIb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="16dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close_grey_24dp"
                android:visibility="gone"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/itemsRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGrey"/>
</LinearLayout>