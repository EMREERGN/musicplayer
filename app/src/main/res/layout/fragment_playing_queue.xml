<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/upIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_keyboard_arrow_up_grey_24dp"
        android:tint="@color/black"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/upNextTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upIv"
        android:layout_centerHorizontal="true"
        android:text="@string/up_next_title_text"
        android:textAppearance="@style/bodyTextStyle"
        android:textColor="@color/black"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/itemsRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/upNextTitleTv"
        android:layout_marginTop="8dp"/>
</RelativeLayout>
