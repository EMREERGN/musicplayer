<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/iconCv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="@dimen/card_radius_small"
        app:cardElevation="@dimen/card_elevation_small"
        app:cardBackgroundColor="@color/lightGrey">

        <ImageView
            android:id="@+id/iconIv"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:padding="8dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="bottom"
            android:layout_margin="4dp"
            android:src="@drawable/ic_playlist_play_grey_24dp"
            android:tint="@color/white"
            tools:ignore="ContentDescription" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iconCv"
        android:layout_toStartOf="@+id/optionsIb"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_playlist_title"
            android:textAppearance="@style/titleTextStyle"
            android:ellipsize="end"
            android:lines="1"/>

        <TextView
            android:id="@+id/subtitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_playlist_no_songs"
            android:textAppearance="@style/bodyTextStyle"
            android:ellipsize="end"
            android:lines="1"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/optionsIb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_more_vert_grey_24dp"
        tools:ignore="ContentDescription" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_toEndOf="@id/iconCv"
        android:layout_marginStart="16dp"
        android:background="@color/lightGrey"/>
</RelativeLayout>