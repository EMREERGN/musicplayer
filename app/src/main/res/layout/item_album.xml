<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <app.sonu.com.musicplayer.ui.view.WidthFitSquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iconIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_album_art"
            tools:ignore="ContentDescription" />
    </app.sonu.com.musicplayer.ui.view.WidthFitSquareLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_album_title"
            android:textAppearance="@style/titleTextStyle"
            android:ellipsize="end"
            android:lines="1"/>

        <TextView
            android:id="@+id/subtitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_artist_name"
            android:textAppearance="@style/bodyTextStyle"
            android:ellipsize="end"
            android:lines="1"/>
    </LinearLayout>
</LinearLayout>